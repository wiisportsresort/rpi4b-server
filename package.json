{
  "name": "wiisportsresorts.dev",
  "version": "2.0.0-alpha",
  "description": "website",
  "scripts": {
    "start": "concurrently -n build:frontend,build:backend -c \"white.bgBlue.bold,white.bgCyan.bold\" \"pnpm run build-frontend\" \"pnpm run build-backend\" && concurrently -n server -c \"white.bgGreen.bold\" \"pnpm run server\"",
    "dev": "concurrently -n build:frontend,build:backend,server -c \"white.bgBlue.bold,white.bgCyan.bold,white.bgGreen.bold\" \"pnpm run build-frontend:watch\" \"pnpm run build-backend:watch\" \"pnpm run server:watch\"",
    "build-frontend": "webpack -p --config webpack.frontend.js",
    "build-backend": "webpack -p --config webpack.backend.js",
    "build-frontend:watch": "webpack -d --config webpack.frontend.js --watch",
    "build-backend:watch": "webpack -d --config webpack.backend.js --watch",
    "server": "node \"./dist/backend/index.js\"",
    "server:watch": "nodemon \"./dist/backend/index.js\""
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "dist\/backend"
    ]
  },
  "license": "MIT",
  "dependencies": {
    "express": "^4.17.1",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.3",
    "@types/node": "^13.9.5",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "autoprefixer": "^9.7.5",
    "concurrently": "^5.1.0",
    "css-loader": "^3.4.2",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.1",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.13.1",
    "nodemon": "^2.0.2",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^8.0.2",
    "source-map-loader": "^0.2.4",
    "terser-webpack-plugin": "^2.3.5",
    "ts-loader": "^6.2.2",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2"
  }
}
